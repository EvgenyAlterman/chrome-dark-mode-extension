{
  "manifest_version": 3,
  "name": "Dark Mode Toggle",
  "version": "1.0",
  "description": "Applies a soft dark mode to the current page.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_title": "Toggle Dark Mode"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["init.js"],
      "run_at": "document_start"
    }
  ]
}
